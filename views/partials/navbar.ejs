          <li class="nav-item">
            <a class="nav-link <%= currentPath === item.path ? 'active' : '' %>" href="<%= item.path %>" <%= item.name === 'Disabled' ? 'tabindex="-1" aria-disabled="true"' : '' %>><%= item.name %></a>
