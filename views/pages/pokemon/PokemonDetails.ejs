<% layout('layout/boilerplate', {title}) %>
  <a href="/pokemon" class="btn btn-primary">Back</a>
  <h1 class="text-center"><code>Pokemon Details</code></h1>
  <h2> Pokemon: <span class="text-primary"><%= poke.name %></span>
  </h2>

  <!-- Cach 1 -->
  <div class="container d-flex justify-content-center">
    <!-- Responsive example -->
    <section class="pokemon-details-container mt-5 w-sm-75 w-xs-100">
      <div class="w-100 d-flex p-5">
        <img src="<%= poke.image %>" class="rounded img-thumbnail me-5">
        <div class="w-100 d-flex flex-fill flex-column align-items-center">
          <h3>Pokedex: <span class="text-danger">
              <%= poke.pokedexId %>
            </span></h3>
          <h3>Stats</h3>
          <div class="w-100 row gap-5">
            <ul class="col ">
              <li class="mb-4"><svg xmlns="http://www.w3.org/2000/svg" class="text-danger icon icon-tabler icon-tabler-brand-google-fit" width="24" height="24"
                  viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="red" stroke-linecap="round" stroke-linejoin="round">
                  <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                  <path
                    d="M12 9.314l-2.343 -2.344a3.314 3.314 0 0 0 -4.686 4.686l2.343 2.344l4.686 4.686l7.03 -7.03a3.314 3.314 0 0 0 -4.687 -4.685l-7.03 7.029">
                  </path>
                </svg>
                <%= poke.stats.HP %>
              </li>
              <li class="mb-4"><svg xmlns="http://www.w3.org/2000/svg" class="text-danger icon icon-tabler icon-tabler-sword" width="24" height="24"
                  viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="red" stroke-linecap="round" stroke-linejoin="round">
                  <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                  <path d="M20 4v5l-9 7l-4 4l-3 -3l4 -4l7 -9z"></path>
                  <path d="M6.5 11.5l6 6"></path>
                </svg>
                <%= poke.stats.attack %>
              </li>
              <li><svg xmlns="http://www.w3.org/2000/svg" class="text-primary icon icon-tabler icon-tabler-shield-check" width="24" height="24"
                  viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="blue" stroke-linecap="round" stroke-linejoin="round">
                  <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                  <path d="M11.46 20.846a12 12 0 0 1 -7.96 -14.846a12 12 0 0 0 8.5 -3a12 12 0 0 0 8.5 3a12 12 0 0 1 -.09 7.06"></path>
                  <path d="M15 19l2 2l4 -4"></path>
                </svg>
                <%= poke.stats.defense %>
              </li>
            </ul>
            <ul class="col">
              <li class="mb-4"><svg xmlns="http://www.w3.org/2000/svg" class="text-danger icon icon-tabler icon-tabler-sword" width="24" height="24"
                  viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="red" stroke-linecap="round" stroke-linejoin="round">
                  <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                  <path d="M20 4v5l-9 7l-4 4l-3 -3l4 -4l7 -9z"></path>
                  <path d="M6.5 11.5l6 6"></path>
                </svg>
                <%= poke.stats.special_attack %>
              </li>
              <li class="mb-4"><svg xmlns="http://www.w3.org/2000/svg" class="text-primary icon icon-tabler icon-tabler-shield-check" width="24" height="24"
                  viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="blue" stroke-linecap="round" stroke-linejoin="round">
                  <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                  <path d="M11.46 20.846a12 12 0 0 1 -7.96 -14.846a12 12 0 0 0 8.5 -3a12 12 0 0 0 8.5 3a12 12 0 0 1 -.09 7.06"></path>
                  <path d="M15 19l2 2l4 -4"></path>
                </svg>
                <%= poke.stats.special_defense %>
              </li>
              <li><svg xmlns="http://www.w3.org/2000/svg" class="text-success icon icon-tabler icon-tabler-run" width="24" height="24" viewBox="0 0 24 24"
                  stroke-width="2" stroke="currentColor" fill="green" stroke-linecap="round" stroke-linejoin="round">
                  <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                  <path d="M13 4m-1 0a1 1 0 1 0 2 0a1 1 0 1 0 -2 0"></path>
                  <path d="M4 17l5 1l.75 -1.5"></path>
                  <path d="M15 21l0 -4l-4 -3l1 -6"></path>
                  <path d="M7 12l0 -3l5 -1l3 3l3 1"></path>
                </svg>
                <%= poke.stats.speed %>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </section>
  </div>

  <% if (poke.apiEvolutions.length> 0) { %>
    <section class="container mt-5">
      <h2>Evolutions</h2>
      <div class="row">
        <% poke.apiEvolutions.forEach(function(evo) { %>
          <div class="col-4">
              <a href="/pokemon/<%= evo.pokedexId %>">
                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-circle-arrow-right" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                  <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                  <path d="M12 3a9 9 0 1 0 0 18a9 9 0 0 0 0 -18"></path>
                  <path d="M16 12l-4 -4"></path>
                  <path d="M16 12h-8"></path>
                  <path d="M12 16l4 -4"></path>
               </svg> <%= evo.name %>
              </a>
          </div>
          <% });} %>
      </div>
    </section>